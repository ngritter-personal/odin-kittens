<!-- app/views/kittens/show.html.erb -->

<h1><%= @kitten.name %></h1>
<p><strong>Age:</strong> <%= @kitten.age %> years old</p>
<p><strong>Cuteness:</strong> <%= @kitten.cuteness %></p>
<p><strong>Softness:</strong> <%= @kitten.softness %></p>

<%= link_to 'Edit', edit_kitten_path(@kitten) %> |
<%= link_to 'Delete', @kitten, data:
{
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
} %>
<%= link_to 'Return to List', kittens_path %>