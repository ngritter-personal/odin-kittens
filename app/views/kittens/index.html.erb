<!-- app/views/kittens/index.html.erb -->

<h1>All Kittens</h1>
<ul>
  <% @kittens.each do |kitten| %>
    <li>
      <%= "#{kitten.name} - #{kitten.age} years old" %> |
      <%= link_to 'Show', kitten %> |
      <%= link_to 'Edit', edit_kitten_path(kitten) %> |
      <%= link_to 'Delete', kitten, data:
{
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
} %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Kitten', new_kitten_path, class: 'btn btn-primary' %>